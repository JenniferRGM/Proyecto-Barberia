<%- include('partials/header', { titulo: (typeof titulo !== 'undefined' ? titulo : 'Productos') }) %>

<div class="container mb-5">
  <h1 class="mb-4">Nuestros Productos</h1>

  <div id="gridProductos" class="row g-4">
    <% (productos || []).forEach(p => { %>
      <div class="col-md-4 col-lg-3">
        <div class="card h-100 shadow-sm">

          <!-- Imagen o placeholder -->
          <div style="width:100%; height:180px; background:#f2f2f2; display:flex; align-items:center; justify-content:center;">
            <% if (p.Imagen) { %>
              <img src="<%= p.Imagen %>" alt="Imagen de <%= p.Nombre %>" style="width:100%; height:100%; object-fit:cover;">
            <% } else { %>
              <span class="text-muted">Producto</span>
            <% } %>
          </div>

          <div class="card-body d-flex flex-column">
            <h5 class="card-title"><%= p.Nombre %></h5>
            <p class="card-text small text-muted mb-2"><%= p.Descripcion || '...' %></p>

            <div class="mt-auto">
              <div class="d-flex justify-content-between align-items-center mb-2">
                <span class="fw-semibold">₡ <%= Number(p.Precio).toLocaleString() %></span>
                <span class="badge <%= Number(p.StockActual) > 0 ? 'bg-success' : 'bg-danger' %>">
                  <%= Number(p.StockActual) > 0 ? ('Stock: ' + p.StockActual) : 'Sin stock' %>
                </span>
              </div>
              <a 
                href="/ventas/nueva?producto=<%= encodeURIComponent(p.ProductoID) %>"  <!-- preselección opcional -->
                class="btn btn-primary w-100 <%= Number(p.StockActual) <= 0 ? 'disabled' : '' %>"
                aria-disabled="<%= Number(p.StockActual) <= 0 ? 'true' : 'false' %>">
                Vender
              </a>
            </div>
          </div>

        </div>
      </div>
    <% }) %>
  </div>
</div>

<script>
// --- Refresco automático cada 10s ---
async function cargarProductos() {
  try {
    const res = await fetch('/productos/api', { cache: 'no-store' });
    const data = await res.json();
    renderGrid(data);
  } catch (e) {
    console.error('Error cargando productos:', e);
  }
}

function renderGrid(items) {
  const grid = document.getElementById('gridProductos');
  grid.innerHTML = (items || []).map(p => {
    const stockOk = Number(p.StockActual) > 0;
    const badge = stockOk 
      ? `<span class="badge bg-success">Stock: ${p.StockActual}</span>`
      : `<span class="badge bg-danger">Sin stock</span>`;

    const imgHtml = p.Imagen
      ? `<img src="${encodeURI(p.Imagen)}" alt="Imagen de ${escapeHtml(p.Nombre)}" style="width:100%; height:100%; object-fit:cover;">`
      : `<span class="text-muted">Producto</span>`;

    const href = `/ventas/nueva?producto=${encodeURIComponent(p.ProductoID)}`;

    return `
      <div class="col-md-4 col-lg-3">
        <div class="card h-100 shadow-sm">
          <div style="width:100%; height:180px; background:#f2f2f2; display:flex; align-items:center; justify-content:center;">
            ${imgHtml}
          </div>
          <div class="card-body d-flex flex-column">
            <h5 class="card-title">${escapeHtml(p.Nombre)}</h5>
            <p class="card-text small text-muted mb-2">${escapeHtml(p.Descripcion || '...')}</p>
            <div class="mt-auto">
              <div class="d-flex justify-content-between align-items-center mb-2">
                <span class="fw-semibold">₡ ${Number(p.Precio).toLocaleString()}</span>
                ${badge}
              </div>
              <a href="${href}" class="btn btn-primary w-100 ${stockOk ? '' : 'disabled'}"
                 aria-disabled="${stockOk ? 'false' : 'true'}">Vender</a>
            </div>
          </div>
        </div>
      </div>
    `;
  }).join('');
}

// Evita inyección
function escapeHtml(str='') {
  return String(str)
    .replaceAll('&','&amp;').replaceAll('<','&lt;')
    .replaceAll('>','&gt;').replaceAll('"','&quot;')
    .replaceAll("'",'&#39;');
}

cargarProductos();
setInterval(cargarProductos, 10000);
</script>

<%- include('partials/footer') %>

          <% } %>

          <% if (canClientes) { %>
            <li class="nav-item"><a class="nav-link" href="/clientes">Clientes</a></li>
          <% } %>

          <% if (canEsp) { %>
            <li class="nav-item"><a class="nav-link" href="/especialidades">Especialidades</a></li>
          <% } %>

          <% if (showMenuPub) { %>
            <li class="nav-item"><a class="nav-link" href="/productos/menu">Men칰 Productos</a></li>
            <li class="nav-item"><a class="nav-link" href="/servicios/menu">Men칰 Servicios</a></li>
          <% } %>


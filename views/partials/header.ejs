      </button>

      <div class="collapse navbar-collapse" id="navMain">
        <ul class="navbar-nav me-auto">

          <% if (canBarberos) { %>
            <li class="nav-item"><a class="nav-link" href="/barberos">Barberos</a></li>
          <% } %>

          <% if (canCitas) { %>

const canEsp        = isAdmin || isBarbero;
const canPagos      = isAdmin || isBarbero;
const canProductos  = isAdmin || isBarbero;         // CRUD Inventario
const canReportes   = isAdmin;                      // solo admin
const canServicios  = isAdmin || isBarbero;         // CRUD Servicios
const canVentas     = isAdmin || isBarbero;

const showMenuPub   = true; // Men칰 p칰blico de productos/servicios
%>

<% const showNav = (typeof hideNav === 'undefined' || !hideNav); %>

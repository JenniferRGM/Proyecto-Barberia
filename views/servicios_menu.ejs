<%- include('partials/header', { titulo: (typeof titulo !== 'undefined' ? titulo : 'Servicios') }) %>

<div class="container mb-5">
  <h1 class="mb-4">Nuestros Servicios</h1>

  <!-- Contenedor de tarjetas -->
  <div id="gridServicios" class="row g-4">
    <% servicios.forEach(s => { %>
      <div class="col-md-4 col-lg-3">
        <div class="card h-100 shadow-sm">

          <div style="width:100%; height:180px; background:#f2f2f2; display:flex; align-items:center; justify-content:center;">
            <% if (s.Imagen) { %>
              <img src="<%= s.Imagen %>" alt="Imagen de <%= s.Nombre %>" style="width:100%; height:100%; object-fit:cover;">
            <% } else { %>
              <span class="text-muted">Servicio</span>
            <% } %>
          </div>

          <div class="card-body d-flex flex-column">
            <h5 class="card-title"><%= s.Nombre %></h5>
            <p class="card-text small text-muted mb-2"><%= s.Descripcion || '...' %></p>
            <div class="mt-auto">
              <div class="d-flex justify-content-between align-items-center">
                <span class="fw-semibold">₡ <%= Number(s.Precio).toLocaleString() %></span>
                <span class="badge bg-secondary"><%= s.DuracionMinutos %> min</span>
              </div>
              <a href="/citas" class="btn btn-primary w-100 mt-3">Agendar</a>
            </div>
          </div>

        </div>
      </div>
    <% }) %>
  </div>
</div>

<script>
// --- Refresco automático cada 10s ---
async function cargarServicios() {
  try {
    const res = await fetch('/servicios/api', { cache: 'no-store' });
    const data = await res.json();
    renderGrid(data);
  } catch (e) {
    console.error('Error cargando servicios:', e);
  }
}

function renderGrid(items) {
  const grid = document.getElementById('gridServicios');
  grid.innerHTML = items.map(s => {
    const imgHtml = s.Imagen
      ? `<img src="${encodeURI(s.Imagen)}" alt="Imagen de ${escapeHtml(s.Nombre)}" style="width:100%; height:100%; object-fit:cover;">`
      : `<span class="text-muted">Servicio</span>`;

    return `
      <div class="col-md-4 col-lg-3">
        <div class="card h-100 shadow-sm">
          <div style="width:100%; height:180px; background:#f2f2f2; display:flex; align-items:center; justify-content:center;">
            ${imgHtml}
          </div>
          <div class="card-body d-flex flex-column">
            <h5 class="card-title">${escapeHtml(s.Nombre)}</h5>
            <p class="card-text small text-muted mb-2">${escapeHtml(s.Descripcion || '...')}</p>
            <div class="mt-auto">
              <div class="d-flex justify-content-between align-items-center">
                <span class="fw-semibold">₡ ${Number(s.Precio).toLocaleString()}</span>
                <span class="badge bg-secondary">${s.DuracionMinutos} min</span>
              </div>
              <a href="/citas" class="btn btn-primary w-100 mt-3">Agendar</a>
            </div>
          </div>
        </div>
      </div>
    `;
  }).join('');
}

// Evita inyección de HTML
function escapeHtml(str='') {
  return String(str)
    .replaceAll('&','&amp;').replaceAll('<','&lt;')
    .replaceAll('>','&gt;').replaceAll('"','&quot;')
    .replaceAll("'",'&#39;');
}

cargarServicios();
setInterval(cargarServicios, 10000);
</script>

<%- include('partials/footer') %>
